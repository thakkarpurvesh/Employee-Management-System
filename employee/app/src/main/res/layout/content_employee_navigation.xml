<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_frame"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.purvesh.employee.EmployeeNavigationActivity"
    tools:showIn="@layout/app_bar_employee_navigation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#d7d7d7">



        <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:src="@drawable/ep"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:text="Employee Management"
            android:textColor="#0b4a6b"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#6b2d0b"
            android:text="WELCOME"
            android:textStyle="bold"
            android:layout_marginTop="120dp" />

    </FrameLayout>

