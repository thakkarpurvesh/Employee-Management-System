<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.purvesh.employee.feedbackFragment"
    android:background="#d7d7d7"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_adjust_black_24dp"
        android:drawableRight="@drawable/ic_adjust_black_24dp"
        android:layout_gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="ꜰᴇᴇᴅʙᴀᴄᴋ"
        android:textAlignment="center"
        android:textColor="#0d0d0d"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        style="@style/edittext_style"
        android:id="@+id/txtname"
        android:hint="Name"
        android:layout_marginTop="25dp"
        android:inputType="textPersonName" />

    <EditText
        style="@style/edittext_style"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtmail"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        style="@style/edittext_style"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:id="@+id/yourmess"
        android:hint="Your Feedback"
        android:fitsSystemWindows="true"
        android:breakStrategy="balanced"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:padding="5dp" />

    <RatingBar
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnrating"
        style="@style/button_background"
        android:layout_marginTop="20dp"
        android:layout_width="295dp"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:text="Submit"
        android:textColor="#000" />

</LinearLayout>
